<UserControl x:Class="JPSoftworks.EditorBar.EditorBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             mc:Ignorable="d"
             Style="{DynamicResource EditorBarControlStyle}"
             d:DesignHeight="450" d:DesignWidth="800"
             toolkit:Themes.UseVsTheme="True"
             Name="RootControl">
    <UserControl.Resources>
        <PathGeometry x:Key="SettingsPathGeometry"
                      Figures="M12.012 2.25c.734.008 1.465.093 2.182.253a.75.75 0 0 1 .582.649l.17 1.527a1.384 1.384 0 0 0 1.927 1.116l1.401-.615a.75.75 0 0 1 .85.174 9.792 9.792 0 0 1 2.204 3.792.75.75 0 0 1-.271.825l-1.242.916a1.381 1.381 0 0 0 0 2.226l1.243.915a.75.75 0 0 1 .272.826 9.797 9.797 0 0 1-2.204 3.792.75.75 0 0 1-.848.175l-1.407-.617a1.38 1.38 0 0 0-1.926 1.114l-.169 1.526a.75.75 0 0 1-.572.647 9.518 9.518 0 0 1-4.406 0 .75.75 0 0 1-.572-.647l-.168-1.524a1.382 1.382 0 0 0-1.926-1.11l-1.406.616a.75.75 0 0 1-.849-.175 9.798 9.798 0 0 1-2.204-3.796.75.75 0 0 1 .272-.826l1.243-.916a1.38 1.38 0 0 0 0-2.226l-1.243-.914a.75.75 0 0 1-.271-.826 9.793 9.793 0 0 1 2.204-3.792.75.75 0 0 1 .85-.174l1.4.615a1.387 1.387 0 0 0 1.93-1.118l.17-1.526a.75.75 0 0 1 .583-.65c.717-.159 1.45-.243 2.201-.252Zm0 1.5a9.135 9.135 0 0 0-1.354.117l-.109.977A2.886 2.886 0 0 1 6.525 7.17l-.898-.394a8.293 8.293 0 0 0-1.348 2.317l.798.587a2.881 2.881 0 0 1 0 4.643l-.799.588c.32.842.776 1.626 1.348 2.322l.905-.397a2.882 2.882 0 0 1 4.017 2.318l.11.984c.889.15 1.798.15 2.687 0l.11-.984a2.881 2.881 0 0 1 4.018-2.322l.905.396a8.296 8.296 0 0 0 1.347-2.318l-.798-.588a2.881 2.881 0 0 1 0-4.643l.796-.587a8.293 8.293 0 0 0-1.348-2.317l-.896.393a2.884 2.884 0 0 1-4.023-2.324l-.11-.976a8.988 8.988 0 0 0-1.333-.117ZM12 8.25a3.75 3.75 0 1 1 0 7.5 3.75 3.75 0 0 1 0-7.5Zm0 1.5a2.25 2.25 0 1 0 0 4.5 2.25 2.25 0 0 0 0-4.5Z"
                      FillRule="NonZero" />

        <PathGeometry x:Key="FolderPathGeometry"
                      Figures="M20 9.502V8.75a2.25 2.25 0 0 0-2.25-2.25h-5.725l-2.38-1.98A2.25 2.25 0 0 0 8.204 4H4.25A2.25 2.25 0 0 0 2 6.25l-.004 11.5A2.25 2.25 0 0 0 4.246 20H18.47a1.75 1.75 0 0 0 1.698-1.325l1.75-6.998a1.75 1.75 0 0 0-1.698-2.175H20ZM4.25 5.5h3.956a.75.75 0 0 1 .48.173l2.588 2.154a.75.75 0 0 0 .48.173h5.996a.75.75 0 0 1 .75.75v.752H6.424a2.25 2.25 0 0 0-2.183 1.704l-.744 2.978L3.5 6.25a.75.75 0 0 1 .75-.75Zm1.447 6.07a.75.75 0 0 1 .727-.568H20.22a.25.25 0 0 1 .242.31l-1.75 6.999a.25.25 0 0 1-.242.189H4.285a.25.25 0 0 1-.243-.31l1.655-6.62Z"
                      FillRule="NonZero" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Border Style="{DynamicResource EditorBarBorderStyle}">
            <DockPanel>

                <!-- control button on the right -->
                <Border DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Button Click="OpenFolderClicked" ToolTip="Open Containing Folder"
                                Style="{DynamicResource NoBorderButtonStyle}">
                            <Viewbox MaxWidth="12" MaxHeight="12" Stretch="Uniform">
                                <Path Fill="{DynamicResource {x:Static shell:VsBrushes.CommandBarTextActiveKey}}"
                                      Data="{StaticResource FolderPathGeometry}" />
                            </Viewbox>
                        </Button>
                        <Button Click="SettingsClicked" ToolTip="Settings..."
                                Style="{DynamicResource NoBorderButtonStyle}">
                            <Viewbox MaxWidth="12" MaxHeight="12" Stretch="Uniform">
                                <Path Fill="{DynamicResource {x:Static shell:VsBrushes.CommandBarTextActiveKey}}"
                                      Data="{StaticResource SettingsPathGeometry}" />
                            </Viewbox>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Path visualization -->
                <StackPanel Orientation="Horizontal" Margin="1,0" VerticalAlignment="Center">

                    <!-- Root: \ -->
                    <Border Style="{DynamicResource BreadcrumbElementFirst}" Background="{Binding SolutionElementBackground, ElementName=RootControl}" Visibility="{Binding ShowSolutionRoot, ElementName=RootControl, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Label Style="{DynamicResource LabelWithoutAccelerator}" Foreground="{Binding SolutionElementForeground, ElementName=RootControl}">\</Label>
                    </Border>

                    <!-- Solution Folders -->
                    <ItemsControl Name="SolutionFoldersList" Visibility="{Binding ShowSolutionFolders, ElementName=RootControl, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{DynamicResource BreadcrumbElementFolder}" Background="{Binding SolutionFolderElementBackground, ElementName=RootControl}">
                                    <Label Style="{DynamicResource LabelWithoutAccelerator}" Foreground="{Binding SolutionFolderElementForeground, ElementName=RootControl}" Content="{Binding}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Project -->
                    <Border Style="{DynamicResource BreadcrumbElementProject}" Background="{Binding ProjectElementBackground, ElementName=RootControl}">
                        <Label Style="{DynamicResource LabelWithoutAccelerator}" Name="ProjectNameLabel" Foreground="{Binding ProjectElementForeground, ElementName=RootControl}">(project name placeholder)</Label>
                    </Border>

                    <!-- Document Path -->
                    <Border Style="{DynamicResource DocumentPathElement}" Background="Transparent">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="_Copy Full Path" Click="CopyPathClicked" />
                                <MenuItem Header="Copy _Relative Path" Click="CopyRelativePathClicked" />
                                <Separator />
                                <MenuItem Header="Open Containing _Folder" Click="OpenFolderClicked" />
                                <Separator />
                                <MenuItem Header="Open External _Editor" Click="OpenExternalEditorClicked" />
                            </ContextMenu>
                        </Border.ContextMenu>
                        <Label Style="{DynamicResource LabelWithoutAccelerator}"
                               Foreground="{DynamicResource {x:Static shell:VsBrushes.CommandBarTextActiveKey}}"
                               MouseDoubleClick="PathLabel_OnMouseDoubleClick"
                               Name="PathLabel">
                            (document path placeholder)
                        </Label>
                    </Border>

                </StackPanel>
            </DockPanel>

        </Border>
    </Grid>
</UserControl>